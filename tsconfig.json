{
  "compilerOptions": {
    "lib": ["DOM", "ESNext"],
    "importHelpers": true,
    "declaration": true,
    "declarationDir": "dist/types",
    "module": "ESNext",
    "target": "ESNext",
    "jsx": "react-jsx",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "useDefineForClassFields": true
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
