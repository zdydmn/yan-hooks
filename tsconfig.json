{
  "compilerOptions": {
    "lib": ["DOM", "ES2021"],
    "importHelpers": true,
    "module": "ESNext",
    "jsx": "react-jsx",
    "strict": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "resolveJsonModule": true,
    "moduleResolution": "bundler",
    "useDefineForClassFields": true
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
